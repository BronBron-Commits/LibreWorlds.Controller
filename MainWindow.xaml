<Window
    x:Class="LibreWorlds.Controller.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="LibreWorlds Controller"
    Width="600"
    Height="400">

    <StackPanel Margin="20" HorizontalAlignment="Center">

        <TextBlock
            Text="LibreWorlds Controller"
            FontSize="24"
            FontWeight="Bold"
            Margin="0,0,0,20"/>

        <!-- Subsystem Panel -->
        <ItemsControl ItemsSource="{Binding Subsystems}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="0,5">

                        <!-- Status Light -->
                        <Ellipse
                            Width="16"
                            Height="16"
                            Fill="{Binding StateBrush}"
                            Margin="0,0,10,0"/>

                        <!-- Name -->
                        <TextBlock
                            Text="{Binding Name}"
                            Width="150"/>

                        <!-- State -->
                        <TextBlock
                            Text="{Binding StateText}"
                            FontWeight="Bold"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Separator Margin="0,20"/>

        <!-- Controls -->
        <Button
            Content="Start Session"
            Width="140"
            Margin="0,5"
            Click="Start_Click"/>

        <Button
            Content="Stop Session"
            Width="140"
            Margin="0,5"
            Click="Stop_Click"/>

    </StackPanel>
</Window>
