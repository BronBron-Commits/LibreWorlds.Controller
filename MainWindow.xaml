<Window x:Class="LibreWorlds.Controller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:LibreWorlds.Controller.Views"
        Title="LibreWorlds Control Tower"
        Width="600"
        Height="300">

    <DockPanel>

        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10">

            <Button Content="Start Session"
                    Width="120"
                    Margin="5"
                    Click="Start_Click"/>

            <Button Content="Stop"
                    Width="120"
                    Margin="5"
                    Click="Stop_Click"/>
        </StackPanel>

        <ItemsControl ItemsSource="{Binding Subsystems}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <views:SubsystemPanel/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </DockPanel>
</Window>